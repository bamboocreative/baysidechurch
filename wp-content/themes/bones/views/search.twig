{% extends "base.twig" %}

{% block content %}
<div class="container">
	
	
	<h3 class="results-header">Search results for <span class="query">"{{'the_search_query'|function}}"</span></h3>
	
		<div class="search-results">
		{% if events %}
		<div class="results-title"><h2>Event Results</h2><span class="results-number">Displaying <span class="accent">{{ events|length }}</span> event{% if events|length > 1 %}s{% endif %}</span></div>
			{% include 'components/events.twig' %}
		{% endif %}
		
		{% if searchpages %}
			<div class="results-title"><h2>Page Results</h2><span>Displaying <span class="accent">{{ searchpages|length }}</span> page{% if searchpages|length > 1 %}s{% endif %}</span></div>
			{% for page in searchpages %}
				<div class="row">
					<div class="single-archive-wrapper">
						<div class="col-md-12">
							<a href="{{page.permalink}}">
								<div class="calendar"><img src="{% if page.image %}{{page.image}}{% else %}{{site.url}}/wp-content/uploads/assets/nothumb.jpg{%endif%}"></div>
							</a>
							<h2>
								<a href="{{page.permalink}}">{{page.title}}</a>
							</h2>
							<p class="event-content">
								 {{page.content}}
							</p>
						</div>
					</div>
				</div>
			{% endfor %}
		{% endif %}
	</div>
</div>
{% endblock %}