{% block badges %}
<div class="badge-wrapper">
	<div class="container">
		<div class="row">
		{# The badges array is passed through twig in the template(controller) #}
		{% for badge in badges %}
			{# Only loop through the first 4 badges in the array #}
			{% if loop.index0 < 4 %}
			<div class="col-md-3 col-sm-6">
				<a class="single-badge-wrapper" href="{{badge.permalink}}">
					<span class="badge-date">{{badge.date}}</span>
					<img alt="{{badge.title}}" class="event-badge" src="{{badge.image}}">
					<h4 class="badge-title">{{badge.title}}</h4>
				</a>
			</div>
			{% endif %}
		{% endfor %}
		</div>
	</div>
</div>
{% endblock badges %}